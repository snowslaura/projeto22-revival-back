// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users{
  id        Int  @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}

model Items{
  id            Int  @id @default(autoincrement())
  imageUrl      String
  name          String
  size          Int
  priceRangeId  Int
  createdAt     DateTime @default(now())

  @@map("items")
}


model PriceRange{
  id    Int  @id @default(autoincrement())
  range String @unique

  @@map("priceRange")
}

model Offers{
  id          Int  @id @default(autoincrement())
  itemId      Int
  offerUserId Int
  createdAt   DateTime @default(now())
    
  @@map("offers")
}
